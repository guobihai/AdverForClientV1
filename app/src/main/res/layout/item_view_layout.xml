<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/tv_content_bg"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:maxLength="4"
            android:text="富贵花厅"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-2dp"
        android:background="@drawable/tv_content_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvRoomTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/tv_order_bg"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="王健林-李小兰"
            android:layout_weight="1"
            android:textColor="@color/item_content_tv_color1"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvRoomDesc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/tv_order_bg1"
            android:gravity="center|left"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="结婚喜宴"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>